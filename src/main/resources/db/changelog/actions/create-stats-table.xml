<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="create-stats-table" author="jmolden">
        <createTable tableName="stats">
            <column name="id" type="Int">
                <constraints nullable="false" />
            </column>
            <column name="hp" type="Int" />
            <column name="speed" type="Int" />
            <column name="attack" type="Int" />
            <column name="defense" type="Int" />
            <column name="special_attack" type="Int" />
            <column name="special_defense" type="Int" />
        </createTable>
        <createIndex tableName="stats" indexName="stats_id_index" unique="true">
            <column name="id" />
        </createIndex>
        <addForeignKeyConstraint baseTableName="stats" baseColumnNames="id"
                                 constraintName="foreign_key_from_stats"
                                 referencedTableName="pokemon" referencedColumnNames="id" />
    </changeSet>

</databaseChangeLog>